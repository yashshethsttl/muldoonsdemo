<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited_purchase_ocr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.ocr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='invoicing_settings_container']" position="after">
                <h2>Purchase Order OCR</h2>
                <div class="row mt16 o_settings_container" name="purchase_ocr">
                    <div class="col-12 col-lg-6 o_setting_box" id="ocr_qwen_api_key">
                        <label for="ocr_qwen_api_key"/>
                        <field name="ocr_qwen_api_key" password="True"/>
                        <div class="text-muted">
                            Enter Your API key of the Together.ai.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>