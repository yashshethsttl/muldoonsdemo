<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_tree_inherit" model="ir.ui.view">
        <field name="name">purchase.order.inherit.purchase.order.list.ocr</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">purchase_tree_ocr</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_ocr" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.ocr</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//chatter" position="before">
                <div class="o_attachment_preview" />
            </xpath>
        </field>
    </record>
</odoo>
