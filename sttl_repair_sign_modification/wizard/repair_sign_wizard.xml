<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="repair_sign_wizard" model="ir.ui.view">
        <field name="name">repair.sign.wizard.sign.wizard</field>
        <field name="model">repair.sign.wizard</field>
        <field name="arch" type="xml">
            <form string="Sign Repair Orders">
                <sheet>
                    <group>
                        <field name="repair_ids" widget="many2many_tags" readonly="1" />
                        <field name="partner_id" readonly="1" />
                        <field name="sign_text" />
                        <field name="signature" widget="signature"
                            options="{'full_name': 'sign_text'}" />
                    </group>
                    <footer>
                        <button name="action_confirm_signature" string="Confirm" type="object"
                            class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>