<?xml version="1.0"?>
<odoo>
    <record id="action_helpdesk_repair_order_schedule" model="ir.actions.act_window">
        <field name="name">Repair Schedule</field>
        <field name="context">{
            'search_default_product': 1,
            'search_default_createDate': 1,
            }
        </field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">list,gantt</field>
    </record>

    <record id="action_helpdesk_return_order_schedule" model="ir.actions.act_window">
        <field name="name">Return Schedule</field>
        <field name="res_model">stock.picking</field>
        <field name="context">{
            'contact_display': 'partner_address',
            'search_default_asset_mgmt_return': 1,
        }</field>
        <field name="view_mode">list,gantt</field>
    </record>

    <record id="view_picking_internal_search_inherit" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='to_do_transfers']" position="after">
                <filter invisible="1" name="asset_mgmt_return" string="Asset Management: Return" domain="[('picking_type_code','=','incoming'), 
                ('picking_type_id.warehouse_id.is_assets', '=', True), ('picking_type_id.sequence_code','=', 'RIN')]"/>
            </xpath>
        </field>
    </record>

    <record id="asset_return_view_gantt" model="ir.ui.view">
        <field name="name">stock.picking.gantt</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <gantt date_start="scheduled_date" date_stop="scheduled_date"/>
        </field>
    </record>


    <record id="repair_view_gantt" model="ir.ui.view">
        <field name="name">repair.order.gantt</field>
        <field name="model">repair.order</field>
        <field name="arch" type="xml">
            <gantt date_start="schedule_date" date_stop="schedule_date"/>
        </field>
    </record>

    <menuitem
        id="helpdesk_repair_report_menu"
        name="Repair Schedule"
        action="sttl_repair_sign_modification.action_helpdesk_repair_order_schedule"
        parent="helpdesk.helpdesk_ticket_report_menu_main"
        sequence="40" />

    <menuitem
        id="helpdesk_return_report_menu"
        name="Return Schedule"
        action="sttl_repair_sign_modification.action_helpdesk_return_order_schedule"
        parent="helpdesk.helpdesk_ticket_report_menu_main"
        sequence="40" />
</odoo>