<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_recurring" model="ir.ui.view">
        <field name="name">sale.order.form.recurring</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="parent_order_id" invisible="1"/>
                <field name="is_recurring_copy" invisible="1"/>
                <field name="enable_recurring_orders" invisible="1"/>
                 
                <field name="is_recurring" invisible="not enable_recurring_orders"/>
                <label for="recurring_interval" string="Recurring Interval" invisible="not is_recurring or not enable_recurring_orders"/>
                <div class="o_row" invisible="not is_recurring or not enable_recurring_orders">
                    <field name="recurring_interval" class="oe_inline" nolabel="1"/>
                    <field name="recurring_period" class="oe_inline" nolabel="1"/>
                </div>
                <field name="next_recurring_date" invisible="not is_recurring or not enable_recurring_orders" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_recurring_orders_menu" model="ir.actions.act_window">
        <field name="name">Recurring Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_recurring_copy', '=', True),('state','not in',['sent','sale'])]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_recurring_orders"
              name="Recurring Orders"
              parent="sale.sale_order_menu"
              action="action_recurring_orders_menu"
              sequence="10"/>
</odoo>
