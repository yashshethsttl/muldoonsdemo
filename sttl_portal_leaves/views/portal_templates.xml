        <template id="portal_my_leaves" name="My Leaves" inherit_id="portal.portal_my_home" customize_show="True" priority="30">
            <xpath expr="//div[@id='portal_common_category']" position="inside">
                <t t-set="portal_user" t-value="em_user"/>
                <t t-call="portal.portal_docs_entry" t-if="portal_user">
                    <t t-set="icon" t-value="'/sttl_portal_leaves/static/src/img/LEAVE-removebg-preview.png'" style="height: 64px; width: 64px;"/>
                    <t t-set="title">My Leaves</t>
                    <t t-set="text">View or Apply for Leaves</t>
                    <t t-set="url" t-value="'/my/leaves'"/>
                    <t t-set="config_card" t-value="True"/>
                </t>
            </xpath>
        </template>

        <template id="request_unit_hour">
            <div class="form-group mt-3">
                <label id="start-date-label" for="start-date" class="col-form-label">Start Date:</label>
                <input required="True" id="start-date" name="date_from" type="date"
                    class="leave_dates form-control"  />
                <div id="end-date-div">
                    <label for="end-date" class="col-form-label">End Date:</label>
                    <input required="True" name="date_to" type="date" class="leave_dates form-control"
                        id="end-date" />
                </div>
                <select required="True" class="form-select mt-3" style="width: 50%; display: none;"
                    name="request_date_from_period" id="request_date_from_period">
                    <option value="am">Morning</option>
                    <option value="pm">Afternoon</option>
                </select>
                <div class="form-check form-check-inline mt-4 ms-2">
                    <input class="hour_check form-check-input" type="checkbox" name="request_unit_half"
                        id="half-day" value="half_day"/>
                    <label class="form-check-label" for="half-day">Half Day</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="hour_check form-check-input" type="checkbox" name="request_unit_half"
                        id="custom-hours" value="custom_hours"/>
                    <label class="form-check-label" for="custom-hours">Custom Hours</label>
                </div>
            </div>
        </template>
    
