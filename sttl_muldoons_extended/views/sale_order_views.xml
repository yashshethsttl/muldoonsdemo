        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('state', 'in', ['draft', 'sent']),
                ('order_type', '=', 'hostesses')
            ]
        </field>
        <field name="context">
            {
                'default_order_type': 'hostesses'
            }
        </field>
    </record>

    <record id="action_hostesses_orders" model="ir.actions.act_window">
        <field name="name">Hostesses Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('state', 'in', ['sale', 'done']),
                ('order_type', '=', 'hostesses')
            ]
        </field>
