<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sttl_view_order_form_inherit_order_type" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.order.type</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="after">
                <field name="order_type"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']/list/field[@name='product_uom_qty']" position="after">
                <field name="qty_available_today"/>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name="domain">
                    [('partner_id', '=', partner_id)]
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="action_call_in_quotations" model="ir.actions.act_window">
        <field name="name">Call-In Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('state', 'in', ['draft', 'sent']),
                ('order_type', '=', 'call_in')
            ]
        </field>
        <field name="context">
            {
                'default_order_type': 'call_in'
            }
        </field>
    </record>

    <record id="action_call_in_orders" model="ir.actions.act_window">
        <field name="name">Call-In Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('state', 'in', ['sale', 'done']),
                ('order_type', '=', 'call_in')
            ]
        </field>
        <field name="context">
            {
                'default_order_type': 'call_in'
            }
        </field>
    </record>

    <record id="action_hostesses_quotations" model="ir.actions.act_window">
