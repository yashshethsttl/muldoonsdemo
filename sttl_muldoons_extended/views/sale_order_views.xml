        </field>
    </record>

    <menuitem id="menu_call_in" sequence="11" name="Call-In" parent='sale.sale_order_menu'/>
    <menuitem id="menu_call_in_quotations" sequence="1" name="Call in Quotations" action="action_call_in_quotations" parent='menu_call_in'/>
    <menuitem id="menu_call_in_orders" sequence="2" name="Call in Orders" action="action_call_in_orders" parent='menu_call_in'/>

    <menuitem id="menu_hostesses" sequence="12" name="Hostesses" parent='sale.sale_order_menu'/>
    <menuitem id="menu_hostesses_quotations" sequence="1" name="Hostesses Quotations" action="action_hostesses_quotations" parent='menu_hostesses'/>
    <menuitem id="menu_hostesses_orders" sequence="2" name="Hostesses Orders" action="action_hostesses_orders" parent='menu_hostesses'/>

    <menuitem id="menu_standard_ocs" sequence="13" name="Standard Order (OCS)" parent='sale.sale_order_menu'/>
