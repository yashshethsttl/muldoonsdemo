        <field name="name">Standard Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('state', 'in', ['draft', 'sent']),
                ('order_type', '=', 'std_order_ocs')
