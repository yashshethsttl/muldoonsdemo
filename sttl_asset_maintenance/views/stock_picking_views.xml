<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree_asset" model="ir.ui.view">
        <field name="name">stock.move.line.operations.list.asset</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="before">
                <field name="lot_id" optional="show" />
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="image"  widget="image" options="{'size': [250, 250]}" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_stock_move_line_operation_tree_inherit">
        <field name="name">stock.move.line.operation.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="is_asset_warehouse" column_invisible="True"/>
                <field name="image" widget="image" options="{'size': [250, 250]}" required="is_asset_warehouse"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_line_form_inherit">
        <field name="name">stock.move.line.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]/label[@for='quantity']" position="before">
                <field name="image" widget="image" options="{'size': [250, 250]}"/>
            </xpath>
        </field>
    </record>
</odoo>
