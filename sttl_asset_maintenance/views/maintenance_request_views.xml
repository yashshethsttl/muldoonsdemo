<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_request_view_form_inherit_asset" model="ir.ui.view">
        <field name="name">maintenance.request.view.form.inherit.asset</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_sign" type="object" class="oe_highlight" string="Sign" invisible="signature or not allow_sign"/>
                <button name="action_create_repair" class="oe_highlight" string="Create Repair" type="object" invisible="repair_order_id"/>
                <button name="action_create_exchange" class="oe_highlight" string="Exchange" type="object" invisible="picking_id and delivery_id"/>
                <button name="action_purchase_new_machine" string="Purchase New Machine" type="object" groups="maintenance.group_equipment_manager" invisible="not is_exchange_required"/>
                <button name="action_install_equipment" string="Install Equipment" type="object" invisible="request_type != 'installation' or installation_count &gt; 0"/>
            </xpath>

            <xpath expr="//div" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_return_picking" type="object" string="Return" icon="fa-exchange" class="oe_stat_button" invisible="not picking_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Return</span>
                        </div>
                    </button>
                    <button name="action_view_delivery_picking" type="object" string="Delivery" icon="fa-exchange" class="oe_stat_button" invisible="not delivery_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Delivery</span>
                        </div>
                    </button>
                    <button name="action_view_repairs" type="object" string="Repairs" icon="fa-wrench" class="oe_stat_button" invisible="not repair_order_id">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Repairs</span>
                        </div>
                    </button>
                    <button name="action_view_installations" type="object" class="oe_stat_button" icon="fa-wrench" invisible="not installation_count">
                        <field name="installation_count" widget="statinfo" string="Installation"/>
                    </button>
                </div>
            </xpath>

            <xpath expr="//group/field[@name='equipment_id']" position="after">
                <field name="allow_sign" invisible="1" />
                <field name="asset_id" />
                <field name="product_id" />
                <field name="serial_number" domain="[('product_id', '=', product_id)]"/>
                <field name="site_name_id" />
                <field name="site_id" />
                <field name="site_address" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"/>
                <field name="partner_child_id"/>
                <field name="contact_phone"/>
            </xpath>
            <xpath expr="//group/field[@name='company_id']" position="after">
                <field name="helpdesk_ticket_id" readonly="1"/>
                <field name="final_equipment_id" widget="many2one_barcode" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="request_type"/>
                <field name="equipment_status"/>
                <field name="in_time" widget="float_time"/>
                <field name="out_time" widget="float_time"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="attributes">
                <attribute name="string">Technicians Notes</attribute>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='description']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="inside">
                <field name="technican_note_ids">
                    <list editable="bottom">
                        <field name="date" widget="datetime"/>
                        <field name="technician_id"/>
                        <field name="action"/>
                    </list>
                </field>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]" position="attributes">
                <attribute name="string">Service Manager Instructions</attribute>
            </xpath>

            <xpath expr="//field[@name='employee_id']" position="before">
                <field name="maintenance_seq" readonly="1"/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]" position="after">
                <page string="Repair Lines">
                    <field name="repair_move_ids">
                        <list readonly="1">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="state"/>
                        </list>
                    </field>
                </page>
                <page string="Photos" name="maintenance_images">
                    <group>
                        <group>
                            <field name="before_maintenance_img_1" widget="image" string="Before Maintenance Image 1" readonly="1"/>
                            <field name="before_maintenance_img_2" widget="image" string="Before Maintenance Image 2" readonly="1"/>
                        </group>
                        <group>
                            <field name="after_maintenance_img_1" widget="image" string="After Maintenance Image 1"/>
                            <field name="after_maintenance_img_2" widget="image" string="After Maintenance Image 2"/>
                        </group>
                    </group>
                </page>
                <page string="Similar Machines">
                    <field name="available_lot_ids">
                        <list readonly="1">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="location_id"/>
                            <!-- <field name="current_location"/> -->
                            <field name="ref" string="Asset ID"/>
                        </list>
                    </field>
                </page>
            </xpath>

            <xpath expr="//field[@name='production_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="maintenance_request_view_tree_inherit_asset" model="ir.ui.view">
        <field name="name">maintenance.request.view.list.inherit.asset</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <header>
                    <button name="consolidated_sign" type="object" class="oe_highlight" string="Sign"/>
                </header>
            </xpath>

            <xpath expr="//field[@name='stage_id']" position="after">
                <field name="description" optional="False" />
            </xpath>
        </field>
    </record>

    <record id="hr_equipment_view_calendar_inherit" model="ir.ui.view">
        <field name="name">equipment.request.calendar.inherit</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='maintenance_type']" position="after">
                <field name="site_name_id" />
            </xpath>
        </field>
    </record>

    <record id="sttl_maintenance_view_gantt" model="ir.ui.view">
        <field name="name">sttl.maintenance.gantt.view</field>
        <field name="model">maintenance.request</field>
        <field name="arch" type="xml">
            <gantt date_start="schedule_date" date_stop="schedule_date" string="Maintenance Request" 
                    form_view_id="%(maintenance_request_view_form_inherit_asset)d">
                <field name="name" />
                <field name="site_name_id"/>
                <field name="schedule_date"/>
                    
                <templates>
                    <div t-name="gantt-popover">
                        <ul class="ps-1 mb-0 list-unstyled">
                            <li><strong>Name: </strong><t t-out="name"/></li>
                            <li t-if="site_name_id"><strong>Site Name: </strong><t t-out="site_name_id[1]"/></li>
                            <li><strong>Schedule date: </strong><t t-out="schedule_date.toFormat('M/d/yyyy, h:mm a')"/></li>
                        </ul>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>


    <record id="maintenance.hr_equipment_request_action_cal" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity,gantt</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'calendar'}),
            (0, 0, {'view_mode': 'kanban'}),
            (0, 0, {'view_mode': 'list'}),
            (0, 0, {'view_mode': 'pivot'}),
            (0, 0, {'view_mode': 'graph'}),
            (0, 0, {'view_mode': 'activity'}),
            (0, 0, {'view_mode': 'gantt', 'view_id': ref('sttl_maintenance_view_gantt')})]"/>
    </record>

    <record id="maintenance.hr_equipment_request_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity,gantt</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list'}),
            (0, 0, {'view_mode': 'kanban'}),
            (0, 0, {'view_mode': 'calendar'}),
            (0, 0, {'view_mode': 'pivot'}),
            (0, 0, {'view_mode': 'graph'}),
            (0, 0, {'view_mode': 'gantt', 'view_id': ref('sttl_maintenance_view_gantt')})]"/>
    </record>

    <record id="action_assets_management_maintenance" model="ir.actions.act_window">
        <field name="name">Assets Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sttl_assets.view_production_lot_asset_tree"/>
        <field name="domain">
            [('product_id.is_asset', '=', '1')]
        </field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('sttl_assets.view_production_lot_asset_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('sttl_assets.view_production_lot_asset_form')})
        ]"/>
    </record>

    <record id="action_assets_status_maintenance" model="ir.actions.act_window">
        <field name="name">Asset Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.status</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
    </record>

    <menuitem name="Assets" parent="maintenance.menu_maintenance_title" id="assets_menu_maintenance" action="action_assets_management_maintenance" sequence="-1" />
    <menuitem name="Asset Status" parent="maintenance.menu_maintenance_configuration" id="menu_asset_status_maintenance" action="action_assets_status_maintenance" />
</odoo>
