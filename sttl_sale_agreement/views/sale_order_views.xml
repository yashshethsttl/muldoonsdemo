<odoo>
    <record id="view_order_form_inherit_requisition" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.requisition</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_agreement" type="object" class="oe_stat_button" icon="fa-handshake-o fa-2xs" 
                        style="padding-right: 8px;"
                        invisible="not requisition_id">
                    <div class="o_field_widget o_stat_info" style="margin-left: 6px;">
                        <span class="o_stat_text">Sales Agreement</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="requisition_id" 
                       domain="[('vendor_id', '=', partner_id), ('state', '=', 'confirmed'), '|', ('date_end', '=', False), ('date_end', '>=', context_today())]"
                       context="{'m2o_show_reference': 1}"
                       options="{'no_create': True}"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="requisition_line_id" column_invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
